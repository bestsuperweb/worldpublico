<div class="container">
  <div class="col-md-12">
    <div class="modal-header">
      <h2 class="modal-title">Sign up</h2>
      <%= devise_error_messages! %>
    </div>
    <div class="modal-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name) ) do |f| %>
          <div class="form-group">
            <label class="control-label col-md-2">Email</label>
            <div class="col-md-10">
              <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"Email" %><br />
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-2">Password</label>
            <div class="col-md-10">
              <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"Password" %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>

            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-2">Confirmation</label>
            <div class="col-md-10">
              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"Password Confirmation" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <div class="checkbox">
                <%= f.check_box :category %>
                <%= f.label :Organization %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <div class="checkbox">
                <input type="checkbox">
                <%= f.label :Individual %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <%= f.submit "Sign up", class:"btn btn-primary" %>
            </div>
          </div>
      <% end %>
    </div>
    <div class="modal-footer social">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<script>
    $('form.new_user').addClass('form-horizontal');
</script>
<style>
    body{
        background: none;
    }
</style>
